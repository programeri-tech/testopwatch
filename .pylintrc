[MASTER]
# jobs=0 means 'use all CPUs'
jobs=0

[MESSAGES CONTROL]
disable =
  missing-docstring,
  line-too-long,
  invalid-name,
  no-value-for-parameter,
  no-member,
  unused-argument,
  broad-except,
  relative-import,
  wrong-import-position,
  bare-except,
  locally-disabled,
  protected-access,
  abstract-method,
  no-self-use,
  fixme,
  too-few-public-methods,
  ungrouped-imports,
  bad-continuation,
  redefined-outer-name,
  too-many-instance-attributes
  arguments-differ,
  too-many-function-args,
  too-many-instance-attributes,
  no-else-return,
  too-many-arguments

[REPORTS]
output-format=colorized

[FORMAT]
max-line-length=88
logging-modules=
  logging,
  structlog,
